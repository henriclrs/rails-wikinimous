<div class="container">
  <h1><%= @article.title %></h1>
  <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, article_path(@article.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_article_path %>
  <hr>
  <p><%= @article.content %></p>
</div>
